<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="open.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/timeDialog"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="DateSelectorDialog"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/gray"
                android:textColor="@color/write"/>

            <TextView
                android:id="@+id/wheelView"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="WheelView"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/gray"
                android:textColor="@color/write"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/timeSelector_getDate1"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="开始日期"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:textColor="@color/write"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/timeSelector_getDate2"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="结束日期"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:textColor="@color/write"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/timeSelector_ymd"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="年月日"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:textColor="@color/write"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/timeSelector_ym"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="年月"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@color/gray"
                    android:textColor="@color/write"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
